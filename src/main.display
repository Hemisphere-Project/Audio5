
#include <M5Stack.h>


void setup() {
  M5.begin(); 
  M5.Power.begin();
  M5.Lcd.setTextColor(YELLOW);  
  M5.Lcd.setTextSize(2); 
  M5.Lcd.setCursor(65, 10); 
  M5.Lcd.println("LoRa TEST"); 
  
}


void loop() 
{
  M5.update();
  if (M5.BtnA.wasPressed()) 
  {
    M5.Lcd.setTextColor(RED);
    M5.Lcd.println('send /play');
  } 

  
}
